<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/senderImage"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/senderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:text="Sender Name"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@+id/senderImage"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/senderMessageBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/chat_bubble_left"
            android:elevation="16dp"
            android:maxWidth="240dp"
            android:padding="8dp"
            android:text="Text body!"
            android:textColor="#ffffff"
            app:layout_constraintLeft_toRightOf="@+id/senderImage"
            app:layout_constraintTop_toBottomOf="@+id/senderName" />

        <TextView
            android:id="@+id/senderTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="09:30"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/senderMessageBody"
            app:layout_constraintLeft_toRightOf="@+id/senderMessageBody" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

